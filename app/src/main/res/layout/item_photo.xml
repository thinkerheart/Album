<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".view.activity.PhotoUIModelListActivity">

        <ImageView
            android:id="@+id/imgURL"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/url"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgThumbnailUrl"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/url_thumbnail" />

        <TextView
            android:id="@+id/lblAlbumId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toStartOf="@+id/imgThumbnailUrl"
            app:layout_constraintStart_toEndOf="@+id/imgURL"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgThumbnailUrl"
            app:layout_constraintStart_toEndOf="@+id/imgURL"
            app:layout_constraintTop_toBottomOf="@+id/lblAlbumId" />

        <TextView
            android:id="@+id/lblTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/imgThumbnailUrl"
            app:layout_constraintStart_toEndOf="@+id/imgURL"
            app:layout_constraintTop_toBottomOf="@+id/lblId" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>